{
  "manifest_version": 3,
  "name": "Bilingual Translator",
  "version": "1.0",
  "description": "Displays original text with Estonian translation below it (LibreTranslate).",
  "permissions": ["scripting", "activeTab"],
  "content_scripts": [
    {
      "matches": ["*://*.err.ee/*"],
      "js": ["script.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "my-extension@example.com"
    }
  }
}
